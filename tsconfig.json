{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "typeRoots": [
      "./node_modules",
      "node_modules/@types"
    ],
    "declarationDir": "dist/types",
    "declaration": true,
    "types": ["vitest/importMeta"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": [
    "lib/**/*.ts",
    "vite.config.ts",
    "config",
    "auto-import.d.ts",
    "release.config.cjs",
    ".eslintrc.cjs"
  ],
  "exclude": [
    "node_modules",
  ],
}
